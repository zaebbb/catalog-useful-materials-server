{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2016",
    "module": "commonjs",
     "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "paths": {
      "@app/*": ["./src/app/*"],
      "@config/*": ["./src/config/*"],
      "@service/*": ["./src/services/*"],
      "@controller/*": ["./src/controllers/*"],
      "@middleware/*": ["./src/middlewares/*"],
      "@utils/*": ["./src/utils/*"],
      "@model/*": ["./src/models/*"],
      "@provider/*": ["./src/providers/*"],
      "@router/*": ["./src/routes/*"],
      "@validator/*": ["./src/validators/*"]
    }
  },
  "include": [
    ".eslintrc.js",
    "./src/**/*.ts",
    "./index.ts",
    "./prisma/**/*.ts"
  ]
}
